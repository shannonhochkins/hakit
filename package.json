{
  "name": "hakit",
  "description": "A powerful drag-and-drop dashboard builder for Home Assistant",
  "version": "1.0.0",
  "module": "packages/server/index.ts",
  "type": "module",
  "private": true,
  "author": "Shannon Hochkins",
  "license": "PROPRIETARY",
  "keywords": [
    "home-assistant",
    "dashboard",
    "react",
    "typescript",
    "drag-drop"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/hakit.git"
  },
  "workspaces": [
    "packages/editor",
    "packages/addon"
  ],
  "scripts": {
    "dev": "concurrently --kill-others \"bun run dev:server\" \"bun --filter 'hakit-editor' dev\"",
    "prebuild": "bun run test && bun run type-check && bun run lint && bun run format",
    "build:editor": "NODE_ENV=production cd packages/editor && bun run build",
    "build:addon": "NODE_ENV=production cd packages/addon && bun run build",
    "build": "bun run build:editor && bun run build:addon",
    "type-check:editor": "bun run --filter hakit-editor type-check",
    "type-check:addon": "bun run --filter @hakit/addon type-check",
    "type-check:server": "tsc -p packages/server/tsconfig.json --noEmit",
    "type-check": "bun run type-check:editor && bun run type-check:addon && bun run type-check:server",
    "watch:build": "bun --filter 'hakit-editor' watch:build",
    "start": "NODE_ENV=production bun ./packages/server/index.ts",
    "dev:editor": "bun --filter 'hakit-editor' dev",
    "dev:server": "bun --watch ./packages/server/index.ts",
    "test": "NODE_ENV=test bun test --verbose",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rm -rf node_modules && rm -rf packages/editor/node_modules && rm -rf packages/addon/node_modules",
    "generate-theme": "bun ./packages/editor/src/generate-theme.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@happy-dom/global-registrator": "^17.4.4",
    "@originjs/vite-plugin-federation": "^1.4.0",
    "@types/bun": "latest",
    "@types/deep-equal": "^1.0.4",
    "@types/jszip": "^3.4.1",
    "@types/pg": "^8.11.11",
    "@types/react": "^19.1.10",
    "@types/react-window": "^1.8.8",
    "concurrently": "^9.1.2",
    "drizzle-kit": "^0.30.5",
    "eslint": "^9.26.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "globals": "^16.1.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.3",
    "typescript-eslint": "^8.32.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@guanghechen/fast-deep-equal": "^2.3.7",
    "@hakit/components": "^5.1.6",
    "@hakit/core": "^5.1.6",
    "@hono/zod-validator": "^0.7.2",
    "@kinde-oss/kinde-typescript-sdk": "^2.9.1",
    "@measured/puck": "^0.20.2",
    "@monaco-editor/react": "^4.7.0",
    "@octokit/rest": "^22.0.0",
    "@scalar/hono-api-reference": "^0.9.13",
    "@supabase/supabase-js": "^2.49.3",
    "classnames": "^2.5.1",
    "drizzle-orm": "^0.40.0",
    "drizzle-zod": "^0.7.0",
    "home-assistant-js-websocket": "^9.5.0",
    "hono": "^4.7.2",
    "hono-openapi": "^0.4.8",
    "jszip": "^3.10.1",
    "lucide-react": "^0.552.0",
    "postgres": "^3.4.5",
    "type-fest": "^4.41.0",
    "typescript-plugin-css-modules": "^5.2.0",
    "uuid": "^11.1.0",
    "zod": "^4.0.16",
    "zod-validation-error": "^4.0.1",
    "zustand": "^5.0.8"
  }
}
