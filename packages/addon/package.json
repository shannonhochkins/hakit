{
  "name": "@hakit/addon",
  "description": "Create hakit.dev compatible addons with a single command",
  "version": "0.0.13",
  "author": "Shannon Hochkins",
  "license": "PROPRIETARY",
  "type": "module",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "@hakit/addon": "./dist/bin/index.js",
    "hakit-create-component": "./dist/component/index.js",
    "hakit-bundle": "./dist/bundle/bundle.js",
    "hakit-dev": "./dist/bundle/dev.js"
  },
  "files": [
    "dist",
    "templates",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./bundle": {
      "types": "./dist/bundle/bundle.d.ts",
      "import": "./dist/bundle/bundle.js"
    },
    "./component": {
      "types": "./dist/component/index.d.ts",
      "import": "./dist/component/index.js"
    }
  },
  "keywords": [
    "hakit",
    "hakit.dev",
    "homeassistant",
    "home-assistant",
    "react",
    "editor",
    "scaffold",
    "template",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/shannonhochkins/hakit.git",
    "directory": "packages/addon"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "bun run build",
    "test:script": "rm -rf tmp && mkdir tmp && cd tmp && node ../dist/bin/index.js"
  },
  "dependencies": {
    "@emotion/react": "^11.0.0",
    "@measured/puck": "^0.19.3",
    "@module-federation/rsbuild-plugin": "^0.7.0",
    "@rsbuild/core": "^1.3.4",
    "@rsbuild/plugin-react": "^1.3.4",
    "@rslib/core": "^0.11.0",
    "@swc/plugin-emotion": "^11.0.0",
    "archiver": "^7.0.1",
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "home-assistant-js-websocket": "^9.5.0",
    "prompts": "^2.4.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "@types/prompts": "^2.4.9",
    "tsup": "^8.5.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.7.2"
  },
  "peerDependencies": {},
  "engines": {
    "node": ">=18.0.0"
  }
}
